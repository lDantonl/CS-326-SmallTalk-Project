<% include template/header.ejs %>
<% include template/flash.ejs %>
<link rel="stylesheet" href="/stylesheets/home.css" />

	<div id="content">
		<h1><%= title %></h1>

		<p>Welcome, <%= current_user.username %>!</p>

		<form method="POST" action="/submitNewPost">
					
			<textarea id="postTextField" type="text" name="postTextField" placeholder="Compose a new post..."></textarea>
			<!--
			Like
			<input id="like" type="checkbox" name="like" />
			-->
			<br>
			<div style="width: 500px;">
				<input id="submitButton" type="submit" value="Post" name="submitButton" class="btn pull-right" />
			</div>
			<br><br>

			<p><%= current_user.username %>'s Posts</p>
			<% include template/post_list.ejs %>

		</form>
	</div>
<% include template/footer.ejs %>
